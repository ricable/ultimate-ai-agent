{
    "name": "Polyglot TypeScript Development Environment",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:20-bullseye",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20",
            "nodeGypDependencies": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-typescript-next",
                "bradlc.vscode-tailwindcss",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "typescript.preferences.importModuleSpecifier": "relative",
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[javascript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                }
            }
        },
        "devpod": {
            "prebuildRepository": "ghcr.io/ricable/polyglot-devenv-typescript"
        }
    },
    "containerEnv": {
        "NODE_ENV": "development",
        "NPM_CONFIG_UPDATE_NOTIFIER": "false",
        "DEVBOX_ENV": "typescript",
        "CLAUDE_PROJECT_ROOT": "/workspace"
    },
    "mounts": [
        "type=volume,source=npm-cache,target=/home/vscode/.npm",
        "type=volume,source=node-modules,target=/workspace/node_modules"
    ],
    "forwardPorts": [3000, 8080, 5173],
    "portsAttributes": {
        "3000": {
            "label": "Frontend Development Server",
            "onAutoForward": "notify"
        },
        "8080": {
            "label": "API Server",
            "onAutoForward": "notify"
        },
        "5173": {
            "label": "Vite Development Server",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": [
        "echo 'Setting up TypeScript environment...'",
        "npm install",
        "echo 'Setting up Claude Code hooks...'",
        "if [ -d '/workspace/devpod-automation/templates/.claude-core' ]; then cp -r /workspace/devpod-automation/templates/.claude-core /workspace/.claude && chmod +x /workspace/.claude/hooks/*.py /workspace/.claude/mcp/*.sh /workspace/.claude/test-hooks.sh; fi",
        "echo 'Installing MCP dependencies...'",
        "if [ -f '/workspace/.claude/mcp/requirements-mcp.txt' ]; then npm install -g python3 && python3 -m pip install -r /workspace/.claude/mcp/requirements-mcp.txt; fi",
        "echo 'Installing claude-flow...'",
        "npm install -g claude-flow@alpha",
        "echo 'TypeScript environment with Claude Code hooks and claude-flow ready'"
    ],
    "postStartCommand": [
        "echo 'TypeScript DevPod ready. Claude Code hooks: /workspace/.claude/'",
        "echo 'Initializing claude-flow...'",
        "npx --yes claude-flow@alpha init --force",
        "echo 'Starting claude-flow hive-mind wizard...'",
        "npx --yes claude-flow@alpha hive-mind wizard",
        "echo 'Spawning snake game task...'",
        "npx --yes claude-flow@alpha hive-mind spawn \"create a snake game in the language of your devpod dev env\" --claude"
    ],
    "postAttachCommand": [
        "echo 'Welcome to TypeScript DevPod with AI automation! ðŸ“˜ðŸ¤–'",
        "echo 'Claude-flow commands available:'",
        "echo '  npx claude-flow@alpha --help'",
        "echo '  npx claude-flow@alpha status'",
        "echo '  npx claude-flow@alpha hive-mind wizard'",
        "echo '  npx claude-flow@alpha hive-mind spawn \"<task>\" --claude'"
    ]
}