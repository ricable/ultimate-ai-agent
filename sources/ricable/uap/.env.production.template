# .env.production.template
# UAP Production Environment Configuration Template
# Copy this file to .env.production and fill in actual values
# Secrets will be injected by Teller in production

# === Application Configuration ===
UAP_ENV=production
NODE_ENV=production
PYTHONPATH=/app/backend

# === Server Configuration ===
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000
UVICORN_WORKERS=4
UVICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker

# === Framework Configuration ===
# CopilotKit Framework
COPILOTKIT_API_KEY=${COPILOTKIT_API_KEY}
COPILOTKIT_WEBHOOK_SECRET=${COPILOTKIT_WEBHOOK_SECRET}
COPILOTKIT_CACHE_SIZE=1GB
COPILOTKIT_MAX_TOKENS=4096
COPILOTKIT_TIMEOUT=30

# Agno Framework  
AGNO_API_KEY=${AGNO_API_KEY}
AGNO_WORKSPACE_ID=${AGNO_WORKSPACE_ID}
AGNO_GPU_MEMORY=8GB
AGNO_MAX_CONCURRENT_DOCS=10
AGNO_TIMEOUT=60

# Mastra Framework
MASTRA_API_KEY=${MASTRA_API_KEY}
MASTRA_WORKFLOW_TOKEN=${MASTRA_WORKFLOW_TOKEN}
MASTRA_WORKER_COUNT=4
MASTRA_MAX_WORKFLOWS=50
MASTRA_TIMEOUT=120

# === Core LLM APIs ===
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# === Database Configuration ===
DATABASE_URL=${DATABASE_URL}
REDIS_URL=${REDIS_URL}
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# === Vector Database ===
PINECONE_API_KEY=${PINECONE_API_KEY}
PINECONE_ENVIRONMENT=us-west1-gcp
WEAVIATE_API_KEY=${WEAVIATE_API_KEY}
WEAVIATE_URL=https://uap-cluster.weaviate.network

# === Security Configuration ===
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7
ENCRYPTION_KEY=${ENCRYPTION_KEY}
ENCRYPTION_ALGORITHM=AES-256-GCM

# === External Services ===
TAVILY_API_KEY=${TAVILY_API_KEY}
SERP_API_KEY=${SERP_API_KEY}
DOCLING_API_KEY=${DOCLING_API_KEY}

# === Cloud Provider Configuration ===
# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS_JSON=${GOOGLE_APPLICATION_CREDENTIALS_JSON}
GCP_PROJECT_ID=uap-production
GCP_REGION=us-central1

# AWS
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=us-west-2

# Azure
AZURE_CLIENT_ID=${AZURE_CLIENT_ID}
AZURE_CLIENT_SECRET=${AZURE_CLIENT_SECRET}
AZURE_TENANT_ID=your-tenant-id
AZURE_SUBSCRIPTION_ID=your-subscription-id

# === Performance and Scaling ===
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=300
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200
RATE_LIMIT_REDIS_URL=${RATE_LIMIT_REDIS_URL}

# === Session and Caching ===
SESSION_SECRET=${SESSION_SECRET}
SESSION_TIMEOUT=3600
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# === Monitoring and Observability ===
DATADOG_API_KEY=${DATADOG_API_KEY}
DATADOG_SERVICE_NAME=uap-production
PROMETHEUS_BASIC_AUTH=${PROMETHEUS_BASIC_AUTH}
PROMETHEUS_PORT=9090
GRAFANA_API_KEY=${GRAFANA_API_KEY}

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# === Webhook Configuration ===
WEBHOOK_SECRET=${WEBHOOK_SECRET}
GITHUB_WEBHOOK_SECRET=${GITHUB_WEBHOOK_SECRET}
WEBHOOK_TIMEOUT=30

# === File Upload and Storage ===
MAX_FILE_SIZE=100MB
UPLOAD_DIRECTORY=/app/uploads
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,md,csv,json
STORAGE_BACKEND=s3
S3_BUCKET_NAME=uap-production-uploads

# === GPU and Compute Configuration ===
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
TORCH_NUM_THREADS=8
OMP_NUM_THREADS=8

# === Health Check Configuration ===
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# === Backup Configuration ===
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=uap-production-backups

# === Feature Flags ===
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# === Development/Debug (should be false in production) ===
DEBUG=false
DEVELOPMENT_MODE=false
ENABLE_CORS_ALL=false
SKIP_AUTH_FOR_HEALTH=true