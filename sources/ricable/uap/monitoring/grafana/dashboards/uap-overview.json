{
  "dashboard": {
    "id": null,
    "title": "UAP Platform Overview",
    "tags": ["uap", "overview", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"uap-backend\"}",
            "legendFormat": "Backend Status",
            "refId": "A"
          },
          {
            "expr": "up{job=\"postgres-exporter\"}",
            "legendFormat": "Database Status",
            "refId": "B"
          },
          {
            "expr": "up{job=\"redis-exporter\"}",
            "legendFormat": "Redis Status",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Agent Response Time (95th Percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(uap_agent_response_time_seconds_bucket[5m]))",
            "legendFormat": "{{ framework }} - {{ agent_id }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "max": 10,
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [2], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "30s",
          "handler": 1,
          "name": "Agent Response Time Alert",
          "noDataState": "no_data"
        }
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(uap_agent_requests_total[5m])",
            "legendFormat": "{{ framework }} - {{ status }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/second",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "System Resources",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "uap_system_cpu_usage_percent",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "uap_system_memory_usage_percent",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          },
          {
            "expr": "uap_system_disk_usage_percent",
            "legendFormat": "Disk Usage %",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "max": 100,
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "WebSocket Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "uap_websocket_connections_active",
            "legendFormat": "Agent {{ agent_id }}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Active Connections",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(uap_agent_requests_total{status=\"error\"}[5m]) / rate(uap_agent_requests_total[5m]) * 100",
            "legendFormat": "{{ framework }} Error Rate %",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate %",
            "max": 100,
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Distributed Processing",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "uap_ray_cluster_nodes_total",
            "legendFormat": "Ray Nodes",
            "refId": "A"
          },
          {
            "expr": "uap_ray_queue_size",
            "legendFormat": "Queue Size",
            "refId": "B"
          },
          {
            "expr": "rate(uap_ray_tasks_total[5m])",
            "legendFormat": "Tasks/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Count",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "Active Alerts",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"__name__": true, "job": true, "instance": true},
              "indexByName": {},
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "component": "Component",
                "summary": "Summary"
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "agent_id",
          "type": "query",
          "query": "label_values(uap_agent_requests_total, agent_id)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "framework",
          "type": "query",
          "query": "label_values(uap_agent_requests_total, framework)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "uap_application_info",
          "textFormat": "Deployment: {{ version }}",
          "titleFormat": "Version {{ version }}",
          "iconColor": "rgba(0, 211, 255, 1)",
          "enable": true
        }
      ]
    }
  }
}