# Sidero Omni Proxmox Infrastructure Provider Configuration
# Copy to .env and fill in your values

# =============================================================================
# OMNI CONNECTION
# =============================================================================

# Your Omni instance endpoint
OMNI_ENDPOINT=https://omni.example.com:443

# Service account key from Omni
# Generate: omnictl serviceaccount create --name proxmox-provider --role InfraProvider
OMNI_SERVICE_ACCOUNT_KEY=

# =============================================================================
# PROXMOX CONNECTION
# =============================================================================

# Proxmox VE API URL
PROXMOX_URL=https://proxmox.example.com:8006

# Proxmox user for API access
PROXMOX_USER=omni@pve

# API token credentials
# Create: pveum user token add omni@pve omni-token --privsep 0
PROXMOX_TOKEN_ID=omni-token
PROXMOX_TOKEN_SECRET=

# =============================================================================
# PROVIDER IDENTITY
# =============================================================================

# Unique provider ID (must be unique across all providers)
PROVIDER_ID=proxmox-provider-1

# Human-readable provider name
PROVIDER_NAME=Proxmox HomeLab

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info
