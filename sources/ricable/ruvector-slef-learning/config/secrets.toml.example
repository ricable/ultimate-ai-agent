# Secrets Configuration Example
# Copy to secrets.toml and encrypt with age
# DO NOT commit secrets.toml to version control!
#
# Usage:
#   1. Copy this file: cp secrets.toml.example secrets.toml
#   2. Fill in actual values
#   3. Encrypt: mise set --age-encrypt --prompt API_KEY
#
# Or use environment variables from .env

# =============================================================================
# API KEYS (encrypt these with age)
# =============================================================================

# AI Provider Keys
ANTHROPIC_API_KEY = ""
OPENAI_API_KEY = ""
GOOGLE_API_KEY = ""

# Infrastructure Keys
GITHUB_TOKEN = ""
DOCKER_REGISTRY_TOKEN = ""
AWS_ACCESS_KEY_ID = ""
AWS_SECRET_ACCESS_KEY = ""

# Database Credentials
DATABASE_URL = ""
REDIS_URL = ""

# =============================================================================
# AGE ENCRYPTION SETUP
# =============================================================================
#
# Generate age key:
#   age-keygen -o config/age-key.txt
#
# Encrypt a value:
#   mise set --age-encrypt --prompt ANTHROPIC_API_KEY
#
# The encrypted value will be stored in mise.local.toml as:
#   ANTHROPIC_API_KEY = { age = { value = "<base64>" } }
#
# Decrypt automatically when mise environment loads
#
# =============================================================================

# Using SSH keys for age (alternative):
#   mise set --age-ssh-recipient ~/.ssh/id_ed25519.pub --prompt SECRET_KEY
#
# This uses your existing SSH key for encryption
