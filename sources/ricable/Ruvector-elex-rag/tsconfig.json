{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@agents/*": ["src/agents/*"],
      "@parsers/*": ["src/parsers/*"],
      "@gnn/*": ["src/gnn/*"],
      "@rag/*": ["src/rag/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "data"]
}
